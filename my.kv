<MyGrid>

    temp_graph: temp_graph
    temp: temp
    hum: hum
    co2: co2
    illu: illu

    GridLayout:
        cols: 1
        size: root.width - 200, root.height - 200
        pos: 100, 100

        Button: 
            text: "get"
            on_press: root.get()
        
        Button: 
            text: "clear data"
            on_press: root.clear()
        
        GridLayout:
            cols: 2
            Label:
                text: "temperature:"
            Label:
                id: temp
                text: "NAN"

            Label:
                text: "humidity:"
            Label:
                id: hum
                text: "NAN"

            Label:
                text: "concentration CO2:"
            Label:
                id: co2
                text: "NAN"

            Label:
                text: "illuminance:"
            Label:
                id: illu
                text: "NAN"
        
        GridLayout:
            cols: 1
            Graph:
                id: temp_graph
                pos: 10, 200
                size: 2820, 1800
                x_grid_label: True
                y_grid_label: True
                x_grid: True
                y_grid: True